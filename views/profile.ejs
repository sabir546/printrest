<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/profile.css">
  <link rel="stylesheet" href="	https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
  <title>Document</title>
</head>

<body>
  <div id="page1">

    <div class="box1 box">
      <div class="content">
        <div class="image">
          <img src="/images/my pic (3).jpeg" alt="Profile Image">
        </div>
        <div class="level">
          <p>PRO</p>
        </div>
        <div class="text">
          <p class="name"><%= user1.fullname %></p>

          <p class="job_title">@<%= user1.username %></p>
          <!-- <p class="job_discription">Lorem ipsum dolor sit amet consectetur adipisicing elit. Magnam
            atque, ipsam a amet laboriosam eligendi.</p> -->
        </div>
        <div class="icons">
          <button>
            <ion-icon name="logo-dribbble"></ion-icon>
          </button>
          <button>
            <ion-icon name="logo-instagram"></ion-icon>
          </button>
          <button>
            <ion-icon name="logo-twitter"></ion-icon>
          </button>
          <button>
            <ion-icon name="logo-linkedin"></ion-icon>
          </button>
          <button>
            <ion-icon name="logo-facebook"></ion-icon>
          </button>
          <button>
            <ion-icon name="logo-behance"></ion-icon>
          </button>
        </div>
        <div class="button">
          <!-- <div>
                            <button class="message" type="button">Message</button>
                        </div> -->
          <div>

            <button><a href="/logout" class="connect">Logout</a></button>
            <!-- <a href="/logout" class="connect">Logout</a> -->
            <br>
            <form action="/upload" method="post" enctype="multipart/form-data">
              <input type="text" name="filecaption" placeholder="some caption">
              <input name="file" type="file">
              <input type="submit">
            </form>

          </div>
        </div>
      </div>
    </div>

  </div>



  </div>
  <div id="page2">
    <div class="cards flex">
      <% user1.posts.forEach(function(post){ %>

      <div class="card" style="width: 18rem; padding:20px 20px ;">
        <img src="/images/uploads/<%= post.image %>" class="card-img-top" >
        <div class="card-body">
          <h5 class="card-title"><%= post.imageText%></h5>

          <a href="#" class="btn btn-primary">Go somewhere</a>
        </div>
      </div>

      <% }) %>
    </div>

  </div>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
  <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
</body>

</html>